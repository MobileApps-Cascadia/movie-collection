<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/editMovieListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="mini"
        android:layout_marginBottom="@dimen/list_fab_margin"
        android:layout_marginStart="@dimen/list_fab_margin"
        android:layout_marginTop="@dimen/list_fab_margin"
        android:layout_marginEnd="@dimen/list_fab_margin"
        android:layout_marginLeft="@dimen/fab_margin"
        tools:layout_editor_absoluteX="177dp"
        tools:layout_editor_absoluteY="122dp" />

    <TextView
        android:id="@+id/movie_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textColor="@color/list_item_text_color"
        android:textSize="@dimen/list_item_text_size"
        android:text="TextView"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editMovieListItem"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>